{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "rules": {
    "semi": [2, "never"],
    "arrow-parens": [2, "as-needed"],
    "no-nested-ternary": [0],
    "class-methods-use-this": [0],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "import/prefer-default-export": 0
  },
  "plugins": [
    "react"
  ],
  "env": {
    "mocha": true,
    "browser": true,
    "node": true
  }
}
